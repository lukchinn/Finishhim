@page "/product"

@if (Data != null)
{
    <MudTable Items="@Data" Hover="true" Breakpoint="Breakpoint.Sm" LoadingProgressColor="Color.Info">
        <HeaderContent>
            @*<MudTh>Id</MudTh>*@
            <MudTh>Code</MudTh>
            <MudTh>Name1</MudTh>
            <MudTh>Name2</MudTh>
            <MudTh>Price</MudTh>
        </HeaderContent>
        <RowTemplate>
           @* <MudTd DataLabel="Id">@context.id</MudTd>*@
            <MudTd DataLabel="Code">@context.code</MudTd>
            <MudTd DataLabel="Name1">@context.name1</MudTd>
            <MudTd DataLabel="Name2">@context.name2</MudTd>
            <MudTd DataLabel="Price">@context.price</MudTd>
        </RowTemplate>
    </MudTable>
}
@code {
    List<product> Data = new List<product>();
    protected override void OnInitialized()
    {
        Data = productService.GetAllProduct();
        StateHasChanged();
    }
}